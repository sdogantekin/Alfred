<% include _header %>

<form action="/edit" method="post" id="profileForm" class="form-settings form-horizontal">
    <h3 class="form-settings-heading">Edit Your Profile</h3><br>
    <div class="form-group">
        <label for="username" class="control-label col-xs-2">Username</label>
        <div class="col-xs-10">
            <input name="username" id="username" type="text" class="form-control" placeholder="User name"
                   value="<%= currentUser.username || "" %>">
        </div>
    </div>
    <div class="form-group">
        <label for="email" class="control-label col-xs-2">Email address</label>
        <div class="col-xs-10">
            <input name="email" id="email" type="email" class="form-control" placeholder="E-mail"
                   value="<%= currentUser.email || "" %>">
        </div>
    </div>
    <div class="form-group">
        <label for="welcomeMessage" class="control-label col-xs-2">Welcome message</label>
        <div class="col-xs-10">
            <input name="welcomeMessage" id="welcomeMessage" type="text" class="form-control"
                   placeholder="Welcome Message" value="<%= currentUser.welcomeMessage || "" %>">
        </div>
    </div>
    <div class="form-group">
        <label for="bio" class="control-label col-xs-2">About yourself</label>
        <div class="col-xs-10">
            <textarea name="bio" id="bio" class="form-control"
                      placeholder="Tell us about yourself!"><%= currentUser.bio || "" %></textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="creditCard" class="control-label col-xs-2">Owned Credit Cards</label>
        <div class="col-xs-10 checkbox text-left">
            <label><input name="bonus" id="cards" type="checkbox" value="Bonus" onchange="cardChange(this);"
                        <% if (currentUser.hasCard('bonus')) { %>
                          checked
                        <% } %>
                >Bonus</label>
        </div>
        <div class="col-xs-10 checkbox text-left">
            <label><input name="maximum" id="cards" type="checkbox" value="Maximum" onchange="cardChange(this);"
                        <% if (currentUser.hasCard('maximum')) { %>
                          checked
                        <% } %>
                >Maximum</label>
        </div>
        <div class="col-xs-10 checkbox text-left">
            <label><input name="paraf" id="cards" type="checkbox" value="Paraf" onchange="cardChange(this);"
                        <% if (currentUser.hasCard('paraf')) { %>
                          checked
                        <% } %>
                >Paraf</label>
        </div>
    </div>
    <button type="button" class="btn btn-primary btn-block" onclick="updateProfile();">Update</button>
</form>

<% include _footer %>